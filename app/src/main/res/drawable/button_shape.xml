<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button Corner Radius -->
    <corners android:radius="12dp" />

    <!-- Button Solid Color -->
    <solid android:color="#FFC107" /> <!-- Yellow color, change as needed -->

    <!-- Button Stroke (optional, for border) -->
    <stroke
        android:width="2dp"
        android:color="#FFA000" /> <!-- Darker yellow for border -->

    <!-- Button Padding (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <!-- Button Gradient (optional) -->
    <!-- Uncomment this section if you want gradient colors
    <gradient
        android:startColor="#FFC107"
        android:endColor="#FFA000"
        android:angle="90"/>
    -->
</shape>
